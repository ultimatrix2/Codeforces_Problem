void solve()
{
   
    string str ;
     cin >> str ;
     ll len = LLONG_MAX , n = str.size();
    ll a= - 1 , b = -1 , c = -1;
    for( ll  i = 0 ; i <  n ; i ++ ){
      if( str[i] == '1') a= i;
      else if( str[i] == '2') b= i;
      else c= i;
 
      if( a!= -1 && b !=  -1 && c != -1){
       
        ll Min = min ({ a,b,c});
        ll Max=  max( {a,b,c});
        len = min ( len , Max -Min + 1);
      }
    }
    if( len  == LLONG_MAX) len =0;
    cout<<len<<endl;
}
